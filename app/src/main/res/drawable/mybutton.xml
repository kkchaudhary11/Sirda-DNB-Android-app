<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9e9e9e" />
            <gradient android:angle="-90" android:endColor="#ffd41c1c" android:startColor="#ff9f1d1d" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9e9e9e" />
            <solid android:color="#ffb71c1c" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9e9e9e" />
            <gradient android:angle="-90" android:endColor="#ffc71f1f" android:startColor="#c62828" />
        </shape>
    </item>
</selector>
