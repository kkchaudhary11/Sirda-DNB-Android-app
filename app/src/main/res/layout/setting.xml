<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="help"
        android:text="Help"
        android:textColor="#b71c1c"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Guides you to use this application"
        android:textColor="#ff5e5d61"
        android:textSize="15sp" />

    <View
        android:id="@+id/view6"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3" />
    <TextView
        android:id="@+id/pref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="help"
        android:text="Preferences"
        android:textColor="#b71c1c"
        android:paddingTop="10dp"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Let you select Notices types of your interest"
        android:textColor="#ff5e5d61"
        android:textSize="15sp" />


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <RadioButton
            android:id="@+id/btech"
            android:layout_width="wrap_content"
           android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:text="B.Tech"
            android:textColor="#ff5e5d61"
            />
        <RadioButton
            android:id="@+id/diploma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diploma"
            android:textColor="#ff5e5d61"

            />
    </RadioGroup>

    <View
        android:id="@+id/view4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp">

        <TextView

            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/switch1"
            android:text="Notification"
            android:textColor="#b71c1c"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification"
            android:text="Enable/Disable the notifications"
            android:textColor="#ff5e5d61"
            android:textSize="15sp"

            />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/vibration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/switch2"
            android:text="Vibration"
            android:textColor="#b71c1c"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vibration"
            android:text="Turn ON/OFF on receiving notifications"
            android:textColor="#ff5e5d61"
            android:textSize="15sp"

            />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:id="@+id/views2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/autodown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/switch3"
            android:text="Sync"
            android:textColor="#b71c1c"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/autodown"
            android:text="Enable auto download images(may increase data)"
            android:textColor="#ff5e5d61"
            android:textSize="15sp"

            />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3" />



    <TextView
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="reset"
        android:paddingTop="10dp"
        android:text="Reset to default"
        android:textColor="#b71c1c"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/autodown"
        android:layout_marginBottom="10dp"
        android:text="Rollback to default settings"
        android:textColor="#ff5e5d61"
        android:textSize="15sp" />

    <View
        android:id="@+id/views"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C3C3C3" />


</LinearLayout>


